block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/add')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Product Name' name='name')
          div.form-group
            label(for='brand') Brand:
            input#email.form-control(type='text', placeholder='Product Brand' name='brand')
          button.btn.btn-primary(type='submit') Add